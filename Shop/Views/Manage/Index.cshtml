@using Microsoft.AspNet.Identity
@model Shop.Model.ViewModels.IndexViewModel
@{
    ViewBag.Title = "Zarządzanie profilem";
}


<!-- Tytuł -->
<div class="page-title">
    <div class="container">
        <h2><i class="fa fa-desktop color"></i> Moje konto <small>zarządzaj swoim kontem </small></h2>
        <hr />
    </div>
</div>
<div class="account-content">
    <div class="container">

        <div class="row">
            <div class="col-md-3">
                <div class="sidey">
                    <ul class="nav">
                        <li>@Html.ActionLink("Zmień hasło", "ChangePassword")</li>
                        <li>@Html.ActionLink("Zmień dane", "ChangeData")</li>
                        <li><a href="">Historia zamówień</a></li>
                        <li><a href="">Płatności</a></li>
                    </ul>
                </div>
            </div>
            <div class="col-md-9">
                <h3><i class="fa fa-user color"></i> &nbsp;Nazwa użytkownika</h3>
                <!-- Detale -->
                <div class="address">
                    <address>
                        <!-- Imię -->
                        <strong>@User.Identity.Name </strong><br>
                    </address>
                </div>

                <hr />
            </div>
        </div>

        <div class="sep-bor"></div>
    </div>
</div>

