@using Shop.Model.Helpers
@model IEnumerable<Shop.Model.Models.Product>

<div class="recent-posts blocky">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <!-- Section title -->
                <div class="section-title">
                    <h4><i class="fa fa-desktop color"></i> &nbsp;Nowości</h4>
                </div>

                <div id="item-carousel" class="carousel slide" data-ride="carousel">

                    <!-- Wrapper for slides -->
                    <div class="carousel-inner">
                        @{var i = 0;}
                        @foreach (var item in Model)
                        {
                            // Jeżeli wyświetlone trzy produkty, to przejdź do nowego wiersza

                            i++;
                            if (i == 1)
                            {
                                @Html.Raw(@"<div class=""item active"">")
                                @Html.Raw(@"<div class=""row"">")
                            }
                            if (i < 5)
                            {
                                <div class="col-md-3 col-sm-6">
                                    <!-- single item -->
                                    <div class="s-item">
                                        <!-- Image link -->
                                        @Html.ActionImage("Details", new { id = item.Id }, item.Photo, "Details")
                                        <!-- portfolio caption -->
                                        <div class="s-caption">
                                            <!-- heading and paragraph -->
                                            <h4>@Html.DisplayFor(modelItem => item.Name)</h4>
                                            <p>@Html.DisplayFor(modelItem => item.Description)</p>
                                        </div>
                                    </div>
                                </div>
                                if (i == 4)
                                {
                                    @Html.Raw(@"</div>")
                                    @Html.Raw(@"</div>")
                                }
                            }
                            else
                            {
                                if (i == 5)
                                {
                                    @Html.Raw(@"<div class=""item"">")
                                    @Html.Raw(@"<div class=""row"">")
                                }
                                <div class="col-md-3 col-sm-6">
                                    <!-- single item -->
                                    <div class="s-item">
                                        <!-- Image link -->
                                        @Html.ActionImage("Details", new { id = item.Id }, item.Photo, "Details")
                                        <!-- portfolio caption -->
                                        <div class="s-caption">
                                            <!-- heading and paragraph -->
                                            <h4>@Html.DisplayFor(modelItem => item.Name)</h4>
                                            <p>@Html.DisplayFor(modelItem => item.Description)</p>
                                        </div>
                                    </div>
                                </div>
                                if (i == 8)
                                {
                                    @Html.Raw(@"</div>")
                                    @Html.Raw(@"</div>")
                                }
                            }
                        }
                    </div>

                    <!-- Controls -->
                    <a class="left c-control" href="#item-carousel" data-slide="prev">
                        <i class="fa fa-chevron-left"></i>
                    </a>
                    <a class="right c-control" href="#item-carousel" data-slide="next">
                        <i class="fa fa-chevron-right"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>