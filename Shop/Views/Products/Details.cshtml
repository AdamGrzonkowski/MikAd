@model Shop.Model.Models.Product

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-title">
    <div class="container">
        <h2><i class="fa fa-desktop color"></i> @Html.DisplayFor(model => model.Category.Name) <small> szczegóły produktu</small></h2>
        <hr />
    </div>
</div>

<div class="shop-items">
    <div class="container">
        <div class="row">
            <div class="col-md-9 col-md-push-3">

                <!-- Breadcrumb -->
                <ul class="breadcrumb">
                    <li>@Html.ActionLink("MikAd", "Index", "Home") <span class="divider"></span></li>
                    <li> @Html.ActionLink("Produkty", "Index")<span class="divider"></span></li>
                    <li>
                        @Html.ActionLink(Model.Category.Name, "Index", new {currentFilter = Model.Category.Name})
                    </li>
                    <li class="active">
                        @Model.Name
                    </li>
                </ul>

                <div class="single-item">
                    <div class="row">
                        <div class="col-md-4 col-xs-5">

                            <div class="item-image">
                                <img src="@Url.Content(Model.Photo)" alt="ProductImage" style="float: left"/>
                            </div>
                        </div>

                        <!-- Tytuł i podstawowe info -->
                        <div class="col-md-5 col-xs-7">
                            <h4><strong>@Html.DisplayFor(model => model.Name)</strong></h4>
                            <p><strong>@Html.DisplayNameFor(model => model.Price)</strong> : @Html.DisplayFor(model => model.Price)</p>
                            <p><strong>@Html.DisplayNameFor(model => model.Amount)</strong> : @Html.DisplayFor(model => model.Amount)</p>
                            @foreach (var property in Model.Properties)
                            {
                                <p><strong>@property.Key</strong> : @property.Value</p>
                            }

                            <!-- Dodaj do koszyka -->
                            <div class="input-group">
                                <input type="text" class="form-control" placeholder="1">
                                <span class="input-group-btn">
                                    <button class="btn btn-info" type="button">Kup</button>
                                </span>
                            </div>

                        </div>
                    </div>
                </div>

                <!-- Opis, parametry, recenzje -->
                <ul id="myTab" class="nav nav-tabs">
                    <!-- Use uniqe name for "href" in below anchor tags -->
                    <li class="active"><a href="#tab1" data-toggle="tab">Opis</a></li>
                    <li><a href="#tab2" data-toggle="tab">Szczegóły</a></li>
                    <li><a href="#tab3" data-toggle="tab">Recenzje</a></li>
                </ul>

                <!-- Zawartość taba -->
                <div id="myTabContent" class="tab-content">
                    <!-- Opis -->
                    <div class="tab-pane fade in active" id="tab1">
                        <h5><strong>@Html.DisplayFor(model => model.Name)</strong></h5>
                        <p>
                            @Html.DisplayFor(model => model.Description)
                        </p>
                    </div>

                    <!-- Parametry -->
                    <div class="tab-pane fade" id="tab2">

                        <h5><strong>Parametry:</strong></h5>
                        <table class="table table-striped">
                            <tbody>
                            <tr>
                                <td><strong>@Html.DisplayNameFor(model => model.Name)</strong></td>
                                <td>@Html.DisplayFor(model => model.Name)</td>
                            </tr>
                                <tr>
                                    <td><strong>@Html.DisplayNameFor(model => model.Producer)</strong></td>
                                    <td>@Html.DisplayFor(model => model.Producer)</td>
                                </tr>
                            @foreach (var property in Model.Properties)
                            {
                                <tr>
                                    <td><strong>@property.Key</strong></td>
                                    <td>@property.Value</td>
                                </tr>
                            }
                            </tbody>
                        </table>

                    </div>

                    <!-- Recenzje -->
                    <div class="tab-pane fade" id="tab3">
                        <h5><strong>Recenzje :</strong></h5>
                        <hr/>
                        @foreach (var item in Model.Reviews)
                        {
                            <div class="item-review">
                                <h5>@Html.DisplayFor(modelItem => item.Author) - <span class="color">@Html.DisplayFor(modelItem => item.Rate)</span></h5>
                                <p class="rmeta">@Html.DisplayFor(modelItem => item.AddedDate)</p>
                                <p>@Html.DisplayFor(modelItem => item.ReviewText)</p>
                            </div>
                        }
                        <hr/>

                        <!-- Formularz dodawania recenzji-->
                        @using (Html.BeginForm("CreateReview", "Products", FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()
                            <h5><strong>Napisz recenzję:</strong></h5>
                            <hr/>
                            @Html.ValidationSummary(true, "", new {@class = "text-danger"})
                            <form role="form">
                                <div class="form-group">
                                    <label for="name">Twoje imię</label>
                                    <input type="text" class="form-control" id="name" placeholder="Enter Name">
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputEmail1">Twój adres e-mail</label>
                                    <input type="email" class="form-control" id="exampleInputEmail1" placeholder="Enter email">
                                </div>
                                <div class="form-group">
                                    <label for="rating">Ocena</label>
                                    <select class="form-control">
                                        <option>Ocena</option>
                                        <option>1</option>
                                        <option>2</option>
                                        <option>3</option>
                                        <option>4</option>
                                        <option>5</option>
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputEmail1">Recenzja</label>
                                    <textarea class="form-control" rows="3"></textarea>
                                </div>
                                <button type="submit" class="btn btn-info">Wyślij</button>
                                <button type="reset" class="btn btn-default">Wyczyść</button>
                            </form>
                        }
                    </div>
                </div>
            </div>
        </div>
        <div class="sep-bor"></div>
    </div>
</div>

